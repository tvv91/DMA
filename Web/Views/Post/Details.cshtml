@model PostViewModel
@Html.AntiForgeryToken()

<body data-page="view-post">
    @if (TempData["PostCreated"] != null)
    {
        <script>
            sessionStorage.setItem("post_created", "1");
        </script>
    }
    @if (TempData["PostUpdated"] != null)
    {
        <script>
            sessionStorage.setItem("post_updated", "1");
        </script>
    }
    <div class="post-details-container">
        <div class="post-details-header">
            <a class="btn btn-back" asp-action="index" asp-controller="post">
                <i class="fa fa-arrow-left"></i> Back to Posts
            </a>
            <div class="post-details-actions">
                <a class="btn btn-edit" asp-action="edit" asp-controller="post" asp-route-id="@Model.Id">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <button class="btn btn-remove" data-bs-toggle="modal" data-bs-target="#removemodal">
                    <i class="fa fa-trash"></i> Remove
                </button>
            </div>
        </div>
        
        <article class="post-details-article">
            <header class="post-details-title-section">
                <h1 class="post-details-title">@Model.Title</h1>
                <p class="post-details-description">@Model.Description</p>
                <div class="post-details-meta">
                    <span class="post-meta-item">
                        <i class="fa fa-calendar"></i>
                        <span>Created: <strong>@Model.CreatedDate</strong></span>
                    </span>
                    @if (Model.UpdatedTime != null)
                    {
                        <span class="post-meta-item">
                            <i class="fa fa-clock"></i>
                            <span>Updated: <strong>@Model.UpdatedTime</strong></span>
                        </span>
                    }
                </div>
            </header>
            
            <div class="post-details-content">
                @Html.Raw(Model.Content)
            </div>
        </article>
    </div>
    
    <div class="modal fade" id="removemodal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Remove post?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    This action <b>cannot be undone</b>. Are you sure you want to remove the post?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="onRemove(@Model.Id)">Remove</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/post.js"></script>
    }
</body>

